    <script type="text/javascript" src="{{ url_for('static', filename='js/index.js') }}"></script>
    <title>Ziele Tabelle</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
        .container {
